<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sge_libreria.libro_form" model="ir.ui.view">
            <field name="name">sge_libreria.categoria.form</field>
            <field name="model">sge_libreria.categoria</field>
            <field name="arch" type="xml">
                <form string="Libro">
                    <sheet>
                        <group>
                            <field name="name"></field>
                            <field name="description" />
                            <field name="currency_id"></field>
                            <field name="categoria_id"></field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>       
    
    <record id="sge_libreria.libro_tree" model="ir.ui.view">
        <field name="name">sge_libreria.categoria.tree</field>
        <field name="model">sge_libreria.categoria</field>
        <field name="arch" type="xml">
            <tree string="Libro">
                <field name="name"></field>
                <field name="description" />
            </tree>
        </field>
    </record>
    </data>
</odoo>