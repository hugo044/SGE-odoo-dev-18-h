<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hda_videojuegos.pedido_form" model="ir.ui.view">
            <field name="name">hda_videojuegos.pedido.form</field>
            <field name="model">hda_videojuegos.pedido</field>
            <field name="arch" type="xml">
                <form string="Pedido">
                    <sheet>
                        <group>
                            <field name="codigo"></field>
                            <field name="description_corta"></field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>       
    
        <record id="hda_videojuegos.pedido_tree" model="ir.ui.view">
            <field name="name">hda_videojuegos.pedido.tree</field>
            <field name="model">hda_videojuegos.pedido</field>
            <field name="arch" type="xml">
                <tree string="Pedido">
                    <field name="codigo"/>
                   <field name="description_corta"></field>                   
                </tree>
            </field>
        </record>

        
        <record id="hda_videojuegos.pedido_search" model="ir.ui.view">
            <field name="name">hda_videojuegos.pedido.search</field>
            <field name="model">hda_videojuegos.pedido</field>
            <field name="arch" type="xml">
                <search string="Pedido">
                    <field name="codigo"/>
                </search>
            </field>
        </record>
    </data>
</odoo> 
