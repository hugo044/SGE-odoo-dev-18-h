<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hda_videojuegos.genero_form" model="ir.ui.view">
            <field name="name">hda_videojuegos.genero.form</field>
            <field name="model">hda_videojuegos.genero</field>
            <field name="arch" type="xml">
                <form string="Genero">
                    <sheet>
                        <group>
                            <field name="name"></field>
                            <field name="description"/>
                            <field name="videojuego_ids">
                            <tree>
                                 <field name="name"/>
                                 <field name="precio"/>
                                 <field name="portada" widget="image"/>
                            </tree>
                            </field>
                        </group>
                        
                    </sheet>
                        <div class="oe_chatter">
                            <field name="message_follower_ids" groups="base.group_user" widget="mail_followers" />
                            <field name="activity_ids" widget="mail_activity"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                </form>
            </field>
        </record>  

           
    
        <record id="hda_videojuegos.genero_tree" model="ir.ui.view">
            <field name="name">hda_videojuegos.genero.tree</field>
            <field name="model">hda_videojuegos.genero</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <tree string="Genero" sample="1">
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>



        <record id="hda_videojuegos.genero_search" model="ir.ui.view">
            <field name="name">hda_videojuegos.genero.search</field>
            <field name="model">hda_videojuegos.genero</field>
            <field name="arch" type="xml">
                <search string="Genero">
                    <field name="name"/>
                </search>
            </field>
        </record>

    </data>
</odoo>
