<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hda_videojuegos.genero_form" model="ir.ui.view">
            <field name="name">hda_videojuegos.genero.form</field>
            <field name="model">hda_videojuegos.genero</field>
            <field name="arch" type="xml">
                <form string="Genero">
                    <sheet>
                        <group>
                            <field name="name"></field>
                            <field name="description" />
                        </group>
                        
                    </sheet>

                    <div class="videojuego_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                </form>
            </field>
        </record>       
    
        <record id="hda_videojuegos.genero_tree" model="ir.ui.view">
            <field name="name">hda_videojuegos.genero.tree</field>
            <field name="model">hda_videojuegos.genero</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <tree string="Genero" sample="1">
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="hda_videojuegos.genero_kanban" model="ir.ui.view">
            <field name="name">hda_videojuegos.genero.kanban</field>
            <field name="model">hda_videojuegos.genero</field>
            <field name="arch" type="xml">
                <kanban>
                    <templates>
                        <div class="hda_videojuegos_global_click">
                            <div class="hda_videojuegos_details">
                                <strong>
                                    <field name="name"/>
                                </strong>
                                <div>
                                    <field name="description"/>
                                </div>
                            </div>
                        </div>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="hda_videojuegos.genero_search" model="ir.ui.view">
            <field name="name">hda_videojuegos.genero.search</field>
            <field name="model">hda_videojuegos.genero</field>
            <field name="arch" type="xml">
                <search string="Genero">
                    <field name="name"/>
                </search>
            </field>
        </record>
    </data>
</odoo>
