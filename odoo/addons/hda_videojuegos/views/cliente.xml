<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hda_videojuegos.cliente_form" model="ir.ui.view">
            <field name="name">hda_videojuegos.cliente.form</field>
            <field name="model">hda_videojuegos.cliente</field>
            <field name="arch" type="xml">
                <form string="Cliente">
                    <sheet>
                        <group>
                            <field name="name"></field>
                            <field name="telefono"/>
                            <field name="pedido_id">
                                <tree>
                                 <field name="codigo"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>       
    
        <record id="hda_videojuegos.cliente_tree" model="ir.ui.view">
            <field name="name">hda_videojuegos.cliente.tree</field>
            <field name="model">hda_videojuegos.cliente</field>
            <field name="arch" type="xml">
                <tree string="Cliente">
                    <field name="name"/>
                    <field name="telefono"/>
                </tree>
            </field>
        </record>

        
        <record id="hda_videojuegos.cliente_search" model="ir.ui.view">
            <field name="name">hda_videojuegos.cliente.search</field>
            <field name="model">hda_videojuegos.cliente</field>
            <field name="arch" type="xml">
                <search string="Cliente">
                    <field name="name"/>
                </search>
            </field>
        </record>
    </data>
</odoo> 