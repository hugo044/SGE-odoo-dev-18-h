<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="informe_videojuego_web" model="ir.actions.report">
        <field name="name">Informe de un videojuego</field>
        <field name="model">hda_videojuegos.videojuego</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">hda_videojuegos.informeVideojuegoWeb</field>
        <field name="report_file">hda_videojuegos.informeVideojuegoWeb</field>
        <field name="binding_model_id" ref="model_hda_videojuegos_videojuego"/>
        <field name="binding_type">report</field>
    </record>

    <template id="informeVideojuegoWeb">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="videojuego">
                <t t-call="web.basic_layout">
                    <div class="header"></div>
                    <div class="page"></div>
                    <h1 t-field="videojuego.name"/>

                    <div>
                        <strong>Nombre: </strong>
                        <span t-field="videojuego.name"/>
                    </div>

                    <div>
                        <strong>Precio: </strong>
                        <span t-field="videojuego.precio"/>
                    </div>

                    <div>
                        <strong>Fecha de lanzamiento: </strong>
                        <span t-field="videojuego.fecha_lanzamiento"/>
                    </div>

                    <div>
                        <strong>Portada: </strong>
                    </div>
                    <div>
                        <img  t-att-src="image_data_uri(videojuego.portada)" />
                    </div>

                    <div class="footer"></div>
                </t>
            </t>
        </t>
    </template>
</odoo>
