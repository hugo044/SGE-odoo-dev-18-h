<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="informe_pedido_web" model="ir.actions.report">
        <field name="name">Informe de pedido</field>
        <field name="model">hda_videojuegos.pedido</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">hda_videojuegos.informePedidoWeb</field>
        <field name="report_file">hda_videojuegos.informePedidoWeb</field>
        <field name="binding_model_id" ref="model_hda_videojuegos_pedido"/>
        <field name="binding_type">report</field>
    </record>

    <template id="informePedidoWeb">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="pedido">
                <t t-call="web.basic_layout">
                    <div class="header"></div>
                    <div class="page"></div>
                    <h1 t-field="pedido.codigo"/>

                    <div>
                        <strong>CÃ³digo: </strong>
                        <span t-field="pedido.codigo"/>
                    </div>

                    <div>
                        <strong>Descripcion corta: </strong>
                        <span t-field="pedido.description_corta"/>
                    </div>

                    <div class="footer"></div>
                </t>
            </t>
        </t>
    </template>
</odoo>
